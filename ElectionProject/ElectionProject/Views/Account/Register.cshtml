@model OneDayFlat.ViewModels.RegisterModel
@{
    Layout = "_Layout";
}


<form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly" />
    <div>
        <div>
            <label asp-for="FirstName">Введіть ім'я</label><br />
            <input type="text" asp-for="FirstName" />
            <span asp-validation-for="FirstName" />
        </div>
        <div>
            <label asp-for="LastName">Введіть прізвище</label><br />
            <input type="text" asp-for="LastName" />
            <span asp-validation-for="LastName" />
        </div>
        <div>
            <label asp-for="MiddleName">Введіть по-батькові</label><br />
            <input type="text" asp-for="MiddleName" />
            <span asp-validation-for="MiddleName" />
        </div>
        <div>
            <label asp-for="BirthDate">Введіть дату народження</label><br />
            <input type="text" asp-for="BirthDate" />
            <span asp-validation-for="BirthDate" />
        </div>
        <div>
            <label asp-for="Ipn">Введіть ідентифікаційний номер</label><br />
            <input type="text" asp-for="Ipn" />
            <span asp-validation-for="Ipn" />
        </div>
        <div>
            <label asp-for="DistrictId">Введіть номер дільниці</label><br />
            <input type="text" asp-for="DistrictId" />
            <span asp-validation-for="DistrictId" />
        </div>
        <div>
            <label asp-for="Email">Введіть Email</label><br />
            <input type="text" asp-for="Email" />
            <span asp-validation-for="Email" />
        </div>
        <div>
            <label asp-for="Password">Введіть пароль</label><br />
            <input asp-for="Password" />
            <span asp-validation-for="Password" />
        </div>
        <div>
            <label asp-for="ConfirmPassword">Повторіть пароль</label><br />
            <input asp-for="ConfirmPassword" />
            <span asp-validation-for="ConfirmPassword" />
        </div>
        <div>
            <input type="submit" value="Реєстрація" />
        </div>
    </div>
</form>