@model IEnumerable<ElectionProject.ModelView.VoteResult>
@{
    ViewData["Title"] = "Vote";
}

<br> <br />
<h2>Щоб проголосувати, виберіть кандидата</h2>

<br><br />

    <form asp-action="Vote" method="post">
       
        <div class="form-group">
            @foreach (var candidate in Model)
            {
                <input type="checkbox" name="candidateId" value="@candidate.id" />@candidate.last_name<br />
                <input type="hidden" name="citizenEmail" value="@User.Identity.Name" />
                <input type="hidden" name="electionId" value="@candidate.election_id" />
            }
        </div>
        <button type="submit" class="btn btn-primary">Проголосувати</button>
    </form>



