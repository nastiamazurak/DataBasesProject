@model IEnumerable<ElectionProject.Models.Candidate>

@{
    ViewData["Title"] = "Vote";
}

<br> <br />
<h2>Щоб проголосувати, виберіть кандидата</h2>

<br><br />

<table class="table">
    <thead>
        <tr>
            <td>
                №
            </td>
            <td>
                Кандидат
            </td>
            <td>
                Голос
            <td />
            <td></td>
        </tr>

    </thead>

    <tbody>
        
        @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Citizen.LastName)
                </td>
                <td>
                    <input type="radio" name="ivan" />
                    &nbsp;
                </td>
            </tr>

            }
    <div class="container">
        <button type="button" class="btn btn-default" value="ViewBag.ivan" >Підтвердити</button>
    </div>



    </tbody>
</table>




